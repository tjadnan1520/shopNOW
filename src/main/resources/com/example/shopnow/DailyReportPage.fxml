<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="900.0" prefWidth="1600.0" spacing="25" style="-fx-background-color: #8e8e8e;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shopnow.controller.DailyReportController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Main White Card -->
    <VBox alignment="CENTER" prefHeight="389.0" prefWidth="540.0" spacing="20" style="-fx-padding: 40 30 40 30; -fx-background-color: white; -fx-background-radius: 15;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">

        <!-- Title -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text=" Daily Report" />

        <DatePicker fx:id="datePicker" promptText="Enter date" />

        <Button onAction="#onGenerateReport" prefHeight="50" prefWidth="200" style="-fx-background-color: #8e8e8e; -fx-text-fill: black; -fx-background-radius: 15;" text="Generate Report">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>

        <!-- Back Button -->
        <Button onAction="#onBackClick" prefHeight="50" prefWidth="200" style="-fx-background-color: #8e8e8e; -fx-text-fill: black; -fx-font-size: 14px; -fx-background-radius: 12;" text="Back">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>

    </VBox>

</VBox>
