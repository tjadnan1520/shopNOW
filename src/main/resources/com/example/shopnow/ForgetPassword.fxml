<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" style="-fx-background-color: #8e8e8e8e;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shopnow.controller.ForgetPasswordController">

    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="27.0" prefHeight="323.0" prefWidth="500" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <children>
                <!-- Title -->
                <Label text=" Reset Password">
                    <font>
                        <Font name="Arial Black" size="24" />
                    </font>
                </Label>

                <!-- Form Fields -->
                <VBox spacing="15">
                    <HBox spacing="10">
                        <Label prefWidth="150" text="Email:">
                     <font>
                        <Font name="Arial Black" size="12.0" />
                     </font></Label>
                        <TextField fx:id="emailField" prefWidth="300" promptText="Enter your registered email" />
                    </HBox>

                    <HBox spacing="10">
                        <Label prefWidth="150" text="New Password:">
                     <font>
                        <Font name="Arial Black" size="12.0" />
                     </font></Label>
                        <PasswordField fx:id="newPasswordField" prefWidth="300" promptText="Enter new password" />
                    </HBox>

                    <HBox spacing="10">
                        <Label prefWidth="150" text="Confirm Password:">
                     <font>
                        <Font name="Arial Black" size="12.0" />
                     </font></Label>
                        <PasswordField fx:id="confirmPasswordField" prefWidth="300" promptText="Confirm new password" />
                    </HBox>
                </VBox>

                <!-- Buttons -->
                <Button fx:id="resetButton" onAction="#onResetPassword" prefHeight="40" prefWidth="200" style="-fx-background-color: #8e8e8e8e; -fx-text-fill: black; -fx-font-weight: bold;" text=" Reset Password" />

            </children>
        </VBox>
    </children>
</AnchorPane>
