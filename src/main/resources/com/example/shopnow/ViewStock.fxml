<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shopnow.controller.StockController">
    <children>

        <!-- Header -->
        <VBox prefHeight="92.0" prefWidth="1400.0" style="-fx-background-color: #8e8e8e8e; -fx-background-radius: 0 0 20 20;">
            <children>
                <Label prefHeight="92.0" prefWidth="400.0" style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 26px;" text=" View Stock" />
            </children>
        </VBox>

        <!-- Table -->
        <VBox layoutX="27.0" layoutY="107.0" prefHeight="695.0" prefWidth="1348.0">
            <children>
                <TableView fx:id="viewStock" prefHeight="277.0" prefWidth="1348.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="193.0" text="Entry ID" />
                        <TableColumn fx:id="productIdColumn" prefWidth="257.0" text="Product ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="299.0" text="Product Name" />
                        <TableColumn fx:id="quantityColumn" prefWidth="277.0" text="Quantity" />
                        <TableColumn fx:id="dateColumn" prefWidth="321.0" text="Date" />
                    </columns>
                    <effect>
                        <DropShadow />
                    </effect>
                </TableView>
            </children>
        </VBox>

        <!-- Back Button -->
        <Button fx:id="back" layoutX="1277.0" layoutY="399.0" mnemonicParsing="false" onAction="#onClickBack" prefHeight="46.0" prefWidth="100.0" style="-fx-background-color: #8e8e8e8e; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 20;" text="Back">
            <font>
                <Font name="Arial Bold" size="17.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
